\---
title: Home
layout: default
nav: home
\---

.row
  .span12
    %h1 Latest post

    {% if site.posts == empty %}
    %p No blog posts were found.</p>
    {% else %}

    {% assign post = site.posts[0] %}
    %h1.title
      %a{ :href => '{{ post.url }}' } {{ post.title }}

    %span.date
      {{ post.date | date_to_string }}

    {% for tag in post.tags %}
    %span.tag
      \- <a href="{{ site.url }}/blog.html?tag={{ tag | escape }}">{{ tag }}</a>
    {% endfor %}

    {{ post.content }}

    {% endif %}
